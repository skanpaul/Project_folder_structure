NAME	= prog

CC		= gcc
CFLAG	= -Wall -Wextra -Werror

PATHSRC	= src/
SRC		= main.c

PATHHD	= inc/
HD		= main.h



# **************************************************************************** #
all: $(NAME)

$(NAME):
	$(CC) $(CFLAG) -I $(PATHHD) $(PATHSRC)$(SRC) -o $(NAME)

# **************************************************************************** #